{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist/src",
    "rootDir": "./server",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@shared": ["./shared"],
      "server/*": ["./server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "vite.config.ts", "*.config.ts"]
}

