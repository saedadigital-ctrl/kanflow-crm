{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@assets/*": [
        "attached_assets/*"
      ],
      "@/*": [
        "client/src/*"
      ]
    },
    "sourceMap": false,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": false,
    "noImplicitAny": false
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "drizzle/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}

