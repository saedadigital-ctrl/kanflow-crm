{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@assets/*": [
        "attached_assets/*"
      ],
      "@/*": [
        "client/src/*"
      ]
    },
    "rootDir": "./server",
    "sourceMap": false,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": false,
    "noImplicitAny": false
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}